#!/usr/bin/env bash

HL=$(dirname $0)/../

function usage {
  msg="Usage: hl deploy"
  echo $msg
}

function deploy {
  msg="Usage: deploy dev|staging|prod|app-id"
  if [ -z "$1" ]; then
    echo $msg
  else
    activate_venv
    case $1 in
      'dev') deploy_dev ;;
      'staging') appcfg.py -v --oauth2 --application=care-tiger-staging update $HL ;;
      'prod') appcfg.py -v --oauth2 update $HL ;;
      *) appcfg.py -v --oauth2 --application=$1 update $HL ;;
    esac
    deactivate_venv
  fi
}

function deploy_dev {
  # Prepare.
  echo '>>> npm modules'
  npm install
  echo '>>> Preparing frontend components.'
  npm run bower install
  npm run gulp compile

  # Start the dev server.
  echo '>>> Starting the dev server.'
  dev_appserver.py $HL
}

function activate_venv {
    venv=$HL/venv
    if [ ! -d "$venv" ]; then
      echo '>>> Creating a virtualenv...'
      virtualenv --python=python2.7 --no-site-packages $venv
    fi
    source $venv/bin/activate
    pip install -t lib/pip requests mandrill
}

function deactivate_venv {
    deactivate
}

if [ -z "$1" ]; then
  usage
else
  case $1 in
    'deploy') deploy $2 ;;

    'help') usage ;;
    '-h') usage ;;
    *) usage ;;
  esac
fi
